<Window x:Class="Fly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fly"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
    FocusManager.FocusedElement="{Binding ElementName=MyCanvas}">


    <Canvas Name="MyCanvas" Background="LawnGreen">
        <Image Source="fly.png" Height="67" Width="67" Focusable="True" Name="fly" MouseLeftButtonDown="fly_MouseLeftButtonDown" Visibility="Visible" Canvas.Left="350" Canvas.Top="200"/>
        <Label Name ="lblScore" Canvas.Top="10" Content="SCORE" Canvas.Left="10"/>
        <Label Name ="lblInfo" Canvas.Bottom="10" Content="INFORMATION" Canvas.Left="10"/>


    </Canvas>
</Window>
